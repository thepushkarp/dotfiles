{
  "env": {
    "ENABLE_TOOL_SEARCH": "true"
  },
  "permissions": {
    "allow": [
      "Skill(commit-commands:commit)",
      "Skill(plugin-dev:plugin-structure)",
      "Skill(frontend-design:frontend-design)",
      "Bash(gh issue view:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(ast-grep:*)",
      "Bash(awk:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(ls:*)",
      "Bash(cp:*)",
      "Bash(timeout:*)",
      "Bash(uv run ruff:*)",
      "Bash(mkdir:*)",
      "Bash(npm run build:*)",
      "Bash(npm install:*)",
      "Bash(yarn install)",
      "Bash(yarn build:*)",
      "Bash(yarn add:*)",
      "Bash(yarn prepare)",
      "Bash(yarn format:*)",
      "Bash(yarn lint:*)",
      "Bash(yarn lint:fix:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:arxiv.org)",
      "WebFetch(domain:huggingface.co)",
      "WebFetch(domain:docs.litellm.ai)",
      "WebFetch(domain:openai.com)",
      "WebFetch(domain:platform.openai.com)",
      "WebFetch(domain:cookbook.openai.com)",
      "WebFetch(domain:community.openai.com)",
      "WebFetch(domain:anthropic.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:claude.com)",
      "WebFetch(domain:code.claude.com)",
      "WebFetch(domain:platform.claude.com)",
      "WebFetch(domain:ai.google.dev)",
      "WebFetch(domain:googleapis.github.io)",
      "WebFetch(domain:developers.googleblog.com)",
      "WebFetch(domain:modal.com)",
      "WebFetch(domain:docs.openwebui.com)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Read(.env)",
      "Read(secrets/**)",
      "Bash(sudo:*)"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git restore:*)",
      "Bash(git clean:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "alwaysThinkingEnabled": true,
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "agent-sdk-dev@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "explanatory-output-style@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "learning-output-style@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "perf@perf-hints": true,
    "pyright-lsp@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "brainstorm@brainstorm-plan": true,
    "vercel@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "ralph-wiggum@claude-plugins-official": true,
    "playwright@claude-plugins-official": true,
    "handoff@handoff": true,
    "serena@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "huggingface-skills@claude-plugins-official": true
  }
}
