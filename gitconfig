[core]
	autocrlf = input
	editor = nvim
[alias]
	lg = log --graph --branches --oneline --decorate --pretty=format:'%C(yellow)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	co = checkout
	st = status
	ci = commit
	unstage = reset HEAD --
	last = log -1 HEAD
	uncommit = reset HEAD~
	br = branch
[credential]
	helper = cache --timeout=21600
[merge]
	conflictstyle = diff3
